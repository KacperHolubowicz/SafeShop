@model SafeShop.Application.ViewModels.ProductListPageModel

@foreach(var item in Model.PaginatedProperty)
{
    <div class="row m-4 col-md-8 align-items-center" style="background-color: tan">
        <div class="col-md-3">
            <a href="@Url.Action("Details", new {id = @item.ID})">
                <img alt="@item.Name" src="data:image/png;base64,@Convert.ToBase64String(item.Image)" height="180" width="180">
            </a>
        </div>
        <div class="col-md-5">
            <h6>@Html.ActionLink(@item.Name, "Details", new {id = @item.ID})</h6>
            <h6>@item.Category</h6>
        </div>
        <div class="col-md-4">
            <h4>@item.Price PLN</h4>
        </div>
    </div>
}

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-pageNumber="@(int.Parse(ViewData["PageNumber"].ToString()) - 1)"
   class="btn btn-default @prevDisabled">
    Poprzednia strona
</a>
<a asp-action="Index"
   asp-route-pageNumber="@(int.Parse(ViewData["PageNumber"].ToString()) + 1)"
   class="btn btn-default @nextDisabled">
    Następna strona
</a>

<style type="text/css">
    .actionlink {
        font-size: larger;
    }
</style>