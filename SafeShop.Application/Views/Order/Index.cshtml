@model SafeShop.Application.ViewModels.OrderDataViewModel

<h4>Przygotuj zamówienie</h4>
<hr />
<div class="row">
    <div class="col-md-8 justify-content-center">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3 p-3">
                <h5 class="text-center">Dane osobowe:</h5>
                <div class="row m-4 col-lg-8">
                    <label asp-for="FirstName" class="col-md-6"></label>
                    <input asp-for="FirstName" class="col-md-6" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="row m-4 col-md-8">
                    <label asp-for="LastName" class="col-md-6"></label>
                    <input asp-for="LastName" class="col-md-6" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="row m-4 col-md-8">
                    <label asp-for="Email" class="col-md-6"></label>
                    <input asp-for="Email" class="col-md-6" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="row m-4 col-md-8">
                    <label asp-for="PhoneNumber" class="col-md-6"></label>
                    <input asp-for="PhoneNumber" class="col-md-6" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3 p-3">
                <h5 class="text-center">Dane do wysyłki:</h5>
                <div class="row m-4 col-md-8">
                    <label asp-for="Town" class="col-md-6"></label>
                    <input asp-for="Town" class="col-md-6" />
                    <span asp-validation-for="Town" class="text-danger"></span>
                </div>
                <div class="row m-4 col-lg-8">
                    <label asp-for="Street" class="col-md-6"></label>
                    <input asp-for="Street" class="col-md-6" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="row m-4 col-md-8">
                    <label asp-for="ZipCode" class="col-md-6"></label>
                    <input asp-for="ZipCode" class="col-md-6" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <input type="submit" value="Przejdź do płatności" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}