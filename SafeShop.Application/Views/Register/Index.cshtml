@model SafeShop.Application.ViewModels.RegisterFormViewModel

<h4>Zarejestruj się</h4>
<hr />
<div class="row">
    <div class="col-md-8 justify-content-center">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3 p-3">
                <div class="row m-4 col-lg-8">
                    <label asp-for="Login" class="col-md-6"></label>
                    <input asp-for="Login" class="col-md-6" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="row m-4 col-lg-8">
                    <label asp-for="Password" class="col-md-6"></label>
                    <input asp-for="Password" class="col-md-6" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="row m-4 col-lg-8">
                    <label asp-for="RepeatPassword" class="col-md-6"></label>
                    <input asp-for="RepeatPassword" class="col-md-6" />
                    <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                </div>
                <div class="row m-4 col-lg-8">
                    <label asp-for="Email" class="col-md-6"></label>
                    <input asp-for="Email" class="col-md-6" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="row m-4 col-lg-8">
                    <label asp-for="FirstName" class="col-md-6"></label>
                    <input asp-for="FirstName" class="col-md-6" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="row m-4 col-lg-8">
                    <label asp-for="LastName" class="col-md-6"></label>
                    <input asp-for="LastName" class="col-md-6" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <input type="submit" value="Rejestruj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
